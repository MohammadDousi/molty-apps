{
  "name": "@molty/desktop",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "dev": "concurrently -k \"npm:dev:renderer\" \"npm:dev:main\" \"npm:dev:electron\"",
    "dev:renderer": "wait-on ../../packages/shared/dist/index.js && vite --port 5173",
    "dev:main": "tsc -p tsconfig.main.json --watch",
    "dev:electron": "wait-on dist/main.js ../server/dist/index.js ../../packages/shared/dist/index.js && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron dist/main.js",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "lint": "echo \"lint not configured\""
  },
  "dependencies": {
    "@molty/server": "workspace:*",
    "@molty/shared": "workspace:*",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/react": "^18.2.79",
    "@types/react-dom": "^18.2.25",
    "@vitejs/plugin-react": "^4.3.2",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "electron": "^31.2.0",
    "typescript": "^5.6.3",
    "vite": "^5.4.8",
    "wait-on": "^7.2.0"
  }
}
